<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/dialogInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_bg"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/progressBarMyPlanDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewMyPlanSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluecalendar"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:visibility="gone" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewMyPlanNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMyPlanSubject"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="22sp"
            android:visibility="gone" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewMyPlanDateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMyPlanNote"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="22sp"
            android:visibility="gone" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewMyPlanLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMyPlanDateAndTime"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="22sp"
            android:visibility="gone" />

        <!--<LinearLayout-->
        <!--android:id="@+id/LinearLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/textViewMyEventSpacesAvaliable"-->
        <!--android:layout_margin="10px"-->
        <!--android:gravity="center_horizontal|bottom"-->
        <!--android:orientation="vertical">-->

        <!--<Button-->
        <!--android:id="@+id/buttonMySlotParticipantsSlot"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@drawable/button_default_bg"-->
        <!--android:text="Persons Going"-->
        <!--android:textSize="22sp"-->
        <!--android:visibility="gone" />-->
        <!--</LinearLayout>-->


        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textViewMyPlanLocation"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMyPlanCancelSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_default_bg"
                android:text="Cancel Plan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>