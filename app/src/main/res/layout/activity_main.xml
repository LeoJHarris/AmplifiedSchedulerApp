<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewheaderSlotAppMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="Amplified Scheduler"
            android:textColor="@color/white"
            android:textSize="75sp"
            android:textStyle="bold" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/emailSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_top_bg"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="#cccccc"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/passwordSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_top_bg"
                android:drawableLeft="@drawable/ic_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:password="true"
                android:textColorHint="#cccccc"
                android:textSize="20sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_default_bg"
                android:padding="10dp"
                android:text="Sign In"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </TableRow>
    </LinearLayout>

    <TableRow android:gravity="center">

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/buttonForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:gravity="center">

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/buttonRegistration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:gravity="center">

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewMadeByMeMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="App Designed And Made By Leonard Harris"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>