<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_color_bg">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:paddingTop="30dp"
        android:useDefaultMargins="true">


        <com.lh.leonard.eventhub101.AutoResizeTextView
            android:id="@+id/textViewHeaderCreateSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:gravity="center"
            android:text="Create Event"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_row="1" />

        <EditText
            android:id="@+id/editSlotSubject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:hint="Event Subject*"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextSlotMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="3"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextStringLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="4"
            android:ems="10"
            android:hint="Type Location or Click Geo Location "
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGetLocationGeoPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:padding="10dp"
            android:text="Click Get the Geo Location*"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSlotDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:onClick="setDate"
            android:padding="10dp"
            android:text="Click To Set Date*"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.lh.leonard.eventhub101.AutoResizeTextView
            android:id="@+id/textViewDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:padding="10dp"
            android:text="Please Set Date*"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnClickSetStartTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:padding="10dp"
            android:text="Click To Set Start Time*"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.lh.leonard.eventhub101.AutoResizeTextView
            android:id="@+id/outputStartTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:text="Please Set Start Time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.lh.leonard.eventhub101.AutoResizeTextView
            android:id="@+id/outputEndTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="9"
            android:text="Please Set End Time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClickSetEndTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:padding="10dp"
            android:text="Click To Set End Time"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <com.lh.leonard.eventhub101.AutoResizeTextView
            android:id="@+id/tvSpaces"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="10"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select spaces available (if applicable):"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/numberPickerAttendees"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="11"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxAppointmentRequired"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="12"
            android:onClick="onCheckboxClicked"
            android:padding="10dp"
            android:text="Appointment Required"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/recipientsForSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="13"
            android:padding="10dp"
            android:text="Add Contacts For Event*"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSendSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="14"
            android:background="@drawable/button_default_bg"
            android:drawableRight="@drawable/ic_cross"
            android:padding="10dp"
            android:text="Send Event"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:textStyle="bold" />

    </GridLayout>

</ScrollView>