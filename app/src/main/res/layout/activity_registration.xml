<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lh.leonard.amplifiedscheduler.RegistrationActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/tool_bar"
                    layout="@layout/tool_bar"></include>

            </LinearLayout>

            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelFnameReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="First Name:"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextFNameReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_user_profile"
                android:ems="10"
                android:hint="Tap To Enter First Name"
                android:inputType="text"
                android:textSize="22sp" />

            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabeLnameReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Last Name:"
                android:textSize="22sp" />


            <EditText
                android:id="@+id/editTextLNameReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_user_profile"
                android:ems="10"
                android:hint="Tap To Enter Last Name"
                android:inputType="text"
                android:textSize="22sp" />


            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelTextPasswordReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Password:"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="Tap To Enter Password"
                android:inputType="textPassword"
                android:textSize="22sp" />

            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelPasswordConfirmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Confirm Password:"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPasswordConfirmReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_password"
                android:hint="Tap To Enter Password"
                android:inputType="textPassword"
                android:textSize="22sp" />


            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelEmailReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Email (User Identity For Login):"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_email"
                android:ems="10"
                android:hint="Tap To Enter Email Address"
                android:inputType="textEmailAddress"
                android:textSize="22sp" />


            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Phone Number (For Event Notifications Via SMS):"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editTextPhoneReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="Tap To Enter Phone Number"
                android:inputType="phone"
                android:numeric="integer"
                android:textSize="22sp" />


            <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
                android:id="@+id/txtLabelCountryReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Your Country (Helps For Finding Users):"
                android:textSize="22sp" />

            <AutoCompleteTextView
                android:id="@+id/autocomplete_country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/ic_country"
                android:hint="Tap To Enter Your Country"
                android:inputType="text"
                android:textSize="22sp" />

            <Button
                android:id="@+id/buttonRegisterUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button_default_bg"
                android:padding="10dp"
                android:text="Sign Up"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
