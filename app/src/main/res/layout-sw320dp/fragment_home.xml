<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context="com.lh.leonard.amplifiedscheduler.HomeFragment">

    <!--smaller then 600dp handsets hand held
 - Nexus one
 - fame
 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewMainLogo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/main_textlogo_320" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewWelcomeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewMainLogo"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:paddingTop="25dp"
            android:textColor="@color/bluecalendar"
            android:textSize="25sp" />

        <com.lh.leonard.amplifiedscheduler.AutoResizeTextView
            android:id="@+id/textViewNotificationNumberHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewWelcomeLabel"
            android:gravity="center"
            android:textColor="@color/bluecalendar"
            android:textSize="25sp" />
    </RelativeLayout>
</FrameLayout>