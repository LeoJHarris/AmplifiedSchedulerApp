<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lh.leonard.amplifiedscheduler">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service android:name="com.backendless.AndroidService" />

        <activity
            android:name="com.lh.leonard.amplifiedscheduler.MainActivity"
            android:label="Amplified Scheduler">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.RegistrationActivity"
            android:label="@string/title_activity_registration" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.UserLoggedIn"
            android:label="@string/title_activity_user_logged_in" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.MyCreatedSlotsDialog"
            android:label="My Schedule" />

        <activity
            android:name="com.lh.leonard.amplifiedscheduler.MapsActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.ForgotPasswordReset"
            android:label="@string/title_activity_forgot_password_reset" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.SlotsImGoingToDialog"
            android:label="Schedule Going To" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.CreateSlot"
            android:label="@string/title_activity_create_slot"
            android:noHistory="true" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.RecipientsForSlot"
            android:label="Add Contacts For Schedule"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.AddRemoveContactsTabbed"
            android:label="Amplified Scheduler Home"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.lh.leonard.amplifiedscheduler.NavDrawerActivity"
            android:label="Amplified Scheduler"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.SlotsPendingMyResponseDialog"
            android:label="Invited Schedule" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.JustMapActivity"
            android:label="JustMaps" />
        <activity
            android:name="com.lh.leonard.amplifiedscheduler.ParticipantsActivity"
            android:theme="@android:style/Theme.Dialog" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCie9wDjjfgkNxs2eFpRQf5v8oBY0mhLME" />

        <activity
            android:name="com.lh.leonard.amplifiedscheduler.UnseenSlotsDialog"
            android:label="@string/title_activity_unseen_slots_dialog"></activity>
    </application>

</manifest>
